<%- include("../templates/headerTemplate")%>

<div class="max-w-[450px] w-full min-h-svh mx-auto py-[50px] px-[35px] flex flex-col justify-center items-center text-sky-100 text-md font-medium text-center">
    <h1 class="text-sky-300 text-3xl font-bold mb-5">Widgets</h1>
    <div class="w-full grid justify-items-center">
        <div class="w-full grid grid-rows-[repeat(2, auto)] bg-gray-700 shadow-lg rounded-2xl m-2 justify-items-center overflow-hidden">
            <button class="w-full h-full py-4 px-5 items-center border-b border-gray-800 hover:bg-gray-800 duration-150" onclick="toggleAccordion('temperature')">
                Temperature
            </button>
            <div id="temperature" class="w-full hidden py-4 px-5 flex flex-col items-center bg-gray-600 border-b border-gray-800">
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Enabled</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "temperatureEnabled", checked: widgetSettings.temperature.enabled}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Show Forecast</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "temperatureForcastEnabled", checked: widgetSettings.temperature.showForecast}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Units</span>
                    <%- include("../templates/widgetSettingsSelectTemplate", {
                        id: "temperatureUnits",
                        options: [
                            { value: "c", label: "Celsius" },
                            { value: "f", label: "Fahrenheit" },
                            { value: "k", label: "Kelvin" }
                        ],
                        selection: widgetSettings.temperature.units
                    }) %>
                </div>
            </div>
            <button class="w-full h-full py-4 px-5 items-center border-b border-gray-800 hover:bg-gray-800 duration-150" onclick="toggleAccordion('airQuality')">
                Air Quality
            </button>
            <div id="airQuality" class="w-full hidden py-4 px-5 items-center bg-gray-600 border-b border-gray-800">
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Enabled</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "airQualityEnabled", checked: widgetSettings.airQuality.enabled}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Show Forecast</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "airQualityForcastEnabled", checked: widgetSettings.airQuality.showForecast}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>AQI Scale</span>
                    <%- include("../templates/widgetSettingsSelectTemplate", {
                        id: "airQualityScale",
                        options: [
                            { value: "usa", label: "USA" },
                            { value: "europe", label: "Europe" },
                            { value: "uk", label: "UK" },
                            { value: "china", label: "China" }
                        ],
                        selection: widgetSettings.airQuality.units
                    }) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Carbon Monoxide</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "coEnabled", checked: widgetSettings.airQuality.components.co}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Nitrogen Monoxide</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "noEnabled", checked: widgetSettings.airQuality.components.no}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Nitrogen Dioxide</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "no2Enabled", checked: widgetSettings.airQuality.components.no2}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Ozone</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "o3Enabled", checked: widgetSettings.airQuality.components.o3}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Sulphur Dioxide</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "so2Enabled", checked: widgetSettings.airQuality.components.so2}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Fine Particulates</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "pm2_5Enabled", checked: widgetSettings.airQuality.components.pm2_5}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Course Particulates</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "pm10Enabled", checked: widgetSettings.airQuality.components.pm10}) %>
                </div>
                <div class="w-full flex justify-between items-center py-2 px-5 bg-gray-700 hover:bg-gray-800 duration-150">
                    <span>Ammonia</span>
                    <%- include("../templates/widgetSettingsInputTemplate", {id: "nh3Enabled", checked: widgetSettings.airQuality.components.nh3}) %>
                </div>
            </div>
            <button class="w-full h-full py-4 px-5 items-center border-b border-gray-800 hover:bg-gray-800 duration-150" onclick="toggleAccordion('location')">
                Location
            </button>
            <div id="location" class="w-full hidden py-4 px-5 items-center bg-gray-600 border-b border-gray-800">
                <%- include("../templates/widgetSettingsInputTemplate", {id: "locationEnabled", checked: widgetSettings.location.enabled}) %>
            </div>
            <button class="w-full h-full py-4 px-5 items-center border-b border-gray-800 hover:bg-gray-800 duration-150" onclick="toggleAccordion('medications')">
                Medications
            </button>
            <div id="medications" class="w-full hidden py-4 px-5 items-center bg-gray-600 border-b border-gray-800">
                <%- include("../templates/widgetSettingsInputTemplate", {id: "medicationsEnabled", checked: widgetSettings.medications.enabled}) %>
            </div>
            <button class="w-full h-full py-4 px-5 items-center border-b border-gray-800 hover:bg-gray-800 duration-150" onclick="toggleAccordion('appointments')">
                Appointments
            </button>
            <div id="appointments" class="w-full hidden py-4 px-5 items-center bg-gray-600 border-b border-gray-800">
                <%- include("../templates/widgetSettingsInputTemplate", {id: "appointmentsEnabled", checked: widgetSettings.appointments.enabled}) %>
            </div>
            <button class="w-full h-full py-4 px-5 items-center border-b border-gray-800 hover:bg-gray-800 duration-150" onclick="toggleAccordion('bloodPressure')">
                Blood Pressure
            </button>
            <div id="bloodPressure" class="w-full hidden py-4 px-5 items-center bg-gray-600 border-b border-gray-800">
                <%- include("../templates/widgetSettingsInputTemplate", {id: "bloodPressureEnabled", checked: widgetSettings.bloodPressure.enabled}) %>
            </div>
            <button class="w-full h-full py-4 px-5 items-center border-b border-gray-800 hover:bg-gray-800 duration-150" onclick="toggleAccordion('oxygen')">
                Oxygen
            </button>
            <div id="oxygen" class="w-full hidden py-4 px-5 items-center bg-gray-600 border-b border-gray-800">
                <%- include("../templates/widgetSettingsInputTemplate", {id: "oxygenEnabled", checked: widgetSettings.oxygen.enabled}) %>
            </div>
        </div>
    </div>
    <div id="saveSettingsDiv" class="w-full grid justify-items-center">
        <div class="w-full grid bg-emerald-400 shadow-lg rounded-2xl m-2 justify-items-center hover:bg-emerald-300 duration-200 text-lg font-bold"></div>
        <button id="saveSettingsButton" class="w-full grid bg-gray-400 shadow-lg rounded-2xl m-2 justify-items-center duration-200 text-lg font-bold" onclick="saveSettings()" disabled>
            <span class="w-full h-full py-4 px-5 text-gray-900">SAVE</span>
        </button>
    </div>
    <div class="w-full grid justify-items-center">
        <div class="w-full grid bg-sky-400 shadow-lg rounded-2xl m-2 justify-items-center hover:bg-sky-300 duration-200 text-lg font-bold"></div>
        <a class="w-full grid bg-sky-400 shadow-lg rounded-2xl m-2 justify-items-center hover:bg-sky-300 duration-200 text-lg font-bold" href="../settings">
            <span class="w-full h-full py-4 px-5 text-gray-900">GO BACK</span>
        </a>
    </div>
</div>

<%- include("../templates/footerTemplate") %> 

<script>
    document.addEventListener('DOMContentLoaded', () => {
        let initialSettings = getSettings();
        
        const saveButton = document.getElementById('saveSettingsButton');
        const inputs = document.querySelectorAll('input, select');
        
        inputs.forEach(input => {
            input.addEventListener('change', () => {
                const currentSettings = getSettings();
                const settingsChanged = JSON.stringify(initialSettings) !== JSON.stringify(currentSettings);
                saveButton.disabled = !settingsChanged;
                saveButton.classList.toggle('bg-gray-400', !settingsChanged);
                saveButton.classList.toggle('hover:bg-emerald-300', settingsChanged);
                saveButton.classList.toggle('bg-emerald-400', settingsChanged);
            });
        });

        saveButton.addEventListener('click', () => {
            initialSettings = getSettings();
            saveButton.disabled = true;
            saveButton.classList.toggle('bg-gray-400', true);
            saveButton.classList.toggle('hover:bg-emerald-300', false);
            saveButton.classList.toggle('bg-emerald-400', false);
        })
    });

    function toggleAccordion(id) {
        const element = document.getElementById(id);
        element.classList.toggle('hidden');
    }

    function getSettings() {
        const settings = {
            temperature: {
                enabled: document.getElementById('temperatureEnabled').checked,
                showForecast: document.getElementById('temperatureForcastEnabled').checked,
                units: document.getElementById('temperatureUnits').value
            },
            airQuality: {
                enabled: document.getElementById('airQualityEnabled').checked,
                showForecast: document.getElementById('airQualityForcastEnabled').checked,
                units: document.getElementById('airQualityScale').value,
                components: {
                    co: document.getElementById('coEnabled').checked,
                    no: document.getElementById('noEnabled').checked,
                    no2: document.getElementById('no2Enabled').checked,
                    o3: document.getElementById('o3Enabled').checked,
                    so2: document.getElementById('so2Enabled').checked,
                    pm2_5: document.getElementById('pm2_5Enabled').checked,
                    pm10: document.getElementById('pm10Enabled').checked,
                    nh3: document.getElementById('nh3Enabled').checked
                }
            },
            location: {
                enabled: document.getElementById('locationEnabled').checked
            },
            medications: {
                enabled: document.getElementById('medicationsEnabled').checked
            },
            appointments: {
                enabled: document.getElementById('appointmentsEnabled').checked
            },
            bloodPressure: {
                enabled: document.getElementById('bloodPressureEnabled').checked
            },
            oxygen: {
                enabled: document.getElementById('oxygenEnabled').checked
            }
        };
        return settings;
    }

    async function saveSettings() {
        const settings = getSettings();

        try {
            const response = await fetch('/settings/widgets/update', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(settings)
            });

            if (response.ok) {
                // console.log('Settings saved successfully!');
            } else {
                console.error('Failed to save settings.');
            }
        } catch (error) {
            console.error('Error saving settings:', error);
        }
    }
</script>