<%- include("templates/headerTemplate") %>
    <div class="flex justify-center items-center h-screen bg-gray-700">
        <div>
            <h1>Forgot Password</h1>
            <form action="/forgot/resetPassword" method="post">
                <div class="mb-4">
                    <h2 class="text-sky-400">Password Reset</h2>
                    <input name="temp1" value="<%=email%>" class="hidden"></input>
                    <input name="temp2" value="<%=token%>" class="hidden"></input>

                    <div>
                        <input name="password" type="password" placeholder="Password" required
                        class="bg-gray-500 placeholder-sky-200 text-sky-200 w-full px-4 py-2 rounded-full focus:outline-none">
                    </div>
                    <div>
                        <input name="passwordConfirm" type="password" placeholder=" Confirm Password" required
                        class="bg-gray-500 placeholder-sky-200 text-sky-200 w-full px-4 py-2 rounded-full focus:outline-none"><button type="submit" class="p-3 rounded-lg bg-sky-200 font-bold uppercase shadow-md shadow-sky-200/20 transition-all hover:shadow-lg hover:shadow-sky-200/40  focus:opacity-[0.85] focus:shadow-none">
                            Submit
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include("templates/footerTemplate") %>