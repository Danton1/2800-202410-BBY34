<%- include("templates/headerTemplate") %> 
<div class="w-[450px] min-h-svh bg-gray-900 mx-auto px-[50px] flex justify-center items-center">
    <div class="w-full h-full ">
        <h1 class="text-center text-4xl text-sky-400 font-bold mb-6">Medify</h1>
        <form action="/submitLogin" method="post" class="flex flex-col space-y-5">
            <div class="flex justify-between items-center w-full bg-gray-700 px-5 py-4 rounded-2xl">
                <input name="loginPageEmailInput" type="email" placeholder="Email" required
                    class="w-full h-full bg-gray-700 placeholder-sky-100 text-sky-100 font-semibold focus:outline-none">
            </div>
            <div class="flex justify-between items-center w-full bg-gray-700 px-5 py-4 rounded-2xl">
                <input id="loginPagePasswordInput" name="loginPagePasswordInput" type="password" placeholder="Password" required
                    class="w-full h-full bg-gray-700 placeholder-sky-100 text-sky-100 font-semibold focus:outline-none">
                <button id="togglePasswordVisibility" type="button" class="flex items-center text-gray-700 focus:outline-none">
                    <svg class="h-5 w-5 text-sky-100" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path id="eyePath1" stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                        <path id="eyePath2" d="" />
                    </svg>                      
                </button>
            </div>
            <button type="submit" class="w-full bg-sky-400 py-4 rounded-2xl text-lg text-gray-900 font-extrabold hover:bg-sky-300 hover:text-gray-800 duration-200">
                LOG IN
            </button>
            <div class="text-center text-sky-100">
                <a href="/forgotPage" class="hover:text-sky-400 duration-150">Forgot Password? <i class="ml-2 fa-solid fa-angle-right"></i></a>
                <p class="mt-2">
                    Don't have an account? 
                    <a href="/signup" class="underline hover:text-sky-400 duration-150">Sign Up</a>
                </p>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById('togglePasswordVisibility').addEventListener('click', function() {
        var passwordField = document.getElementById('loginPagePasswordInput');
        var eyePath1 = document.getElementById('eyePath1');
        var eyePath2 = document.getElementById('eyePath2');

        if (passwordField.getAttribute('type') == 'password') {
            passwordField.setAttribute('type', 'text');
            eyePath1.setAttribute('d', 'M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z');
            eyePath2.setAttribute('d', 'M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z');
        } else {
            passwordField.setAttribute('type', 'password');
            eyePath1.setAttribute('d', 'M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88');
            eyePath2.setAttribute('d', '');
        }
    });
</script>
