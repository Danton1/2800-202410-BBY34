<%- include("templates/headerTemplate")%>
<div class="max-w-[450px] w-full min-h-svh mx-auto bg-gray-900 flex flex-col px-[35px] py-[50px] pb-[100px] items-center justify-center space-y-5 text-sky-100 text-md font-medium">
    <!-- Page title -->
    <h1 class="text-sky-300 text-3xl font-bold mb-5">Personal Information</h1>

    <!-- List of personal information -->
    <div class="w-full flex flex-col items-center space-y-4 text-md">
        <div class="w-full bg-gray-700 py-4 px-5 rounded-2xl">
            <span class="border-r-2 pr-2 mr-3">First Name</span> <%= user.firstName %>
        </div>
        <div class="w-full bg-gray-700 py-4 px-5 rounded-2xl">
            <span class="border-r-2 pr-2 mr-3">Last Name</span> <%= user.lastName %>
        </div>
        <div class="w-full bg-gray-700 py-4 px-5 rounded-2xl">
            <span class="border-r-2 pr-2 mr-3">Birth date</span> <%= user.birthDate %>
        </div>
        <div class="w-full bg-gray-700 py-4 px-5 rounded-2xl">
            <span class="border-r-2 pr-2 mr-3">Country</span> <%= user.country %>
        </div>
        <div class="w-full bg-gray-700 py-4 px-5 rounded-2xl">
            <span class="border-r-2 pr-2 mr-3">City</span> <%= user.city %>
        </div>
    </div>

    <!-- Edit & save button -->
    <div class="w-full flex flex-col items-center space-y-4 text-gray-900 text-lg font-bold">
        <button class="w-full bg-sky-400 py-4 rounded-2xl hover:bg-sky-300 hover:text-gray-800 duration-200">
            EDIT
            <i class="fa-solid fa-pen"></i>
        </button>
        <button class="w-full bg-sky-400 py-4 rounded-2xl hover:bg-sky-300 hover:text-gray-800 duration-200">SAVE</button>
    </div>
</div>
<%- include("templates/footerTemplate")%>